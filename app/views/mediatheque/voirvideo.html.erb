
<div class="container">
	<div class="shell">
		<div class="_breadcrumbs">		
	<span><span><a href="/">Accueil</a> &nbsp; <i class="ico-gray-small-arrow-right"></i> &nbsp; <span><a href="/videos/">Vidéos</a> &nbsp; <i class="ico-gray-small-arrow-right"></i> &nbsp; <span class="breadcrumb_last" aria-current="page"><%=@video.title%></span></span></span></span>	<div style="padding-bottom: 20px;"></div>
</div>

		
		<div class="main main-secondary">
			


<%=render "sidebarphoto"%>			
			<div class="content single">
				<div class="section">
					<h2 class="main-title">
						<span><%=@video.title%></span>
					</h2>

					<div>
						<p><strong>Catégorie</strong> : 

<%=@video.categories.map {|h|link_to( h.title,videocat_path(title: h.url), {title:""}).html_safe}.join(', ').html_safe%>
<p><strong>Posté le</strong> : <%=l(@video.date,format: :postele)%></p>
					</div>
					
					<article class="article">
						<div class="article-image">		
							<div class="fb-video" data-href="<%=@video.fbvideo%>" data-width="480" data-show-text="false"></div>
						</div><!-- /.article-image -->
						
					   <div class="article-content">
							<div class="article-body">								
                                                        <%=@video.content.html_safe%>
							</div><!-- /.article-body -->						 
					   </div><!-- /.article-content -->
					</article><!-- /.article -->
				</div><!-- /.section -->
				
								
				<section class="section">
					<h2 class="main-title">
						<span>Vidéos associées</span>
					</h2>					
					<div class="gallery">
							<%=render collection: @video.linkedvideos,as: :video,partial:"mediatheque/video"%>
											       
											
					</div>					    
				</section><!-- /.section -->
								
			</div><!-- /.content -->
		</div><!-- /.main -->
	</div><!-- /.shell -->
</div><!-- /.container -->
<!-- Load Facebook SDK for JavaScript -->
<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.6";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>

